<!-- Login 4 - Bootstrap Brain Component -->


<section class="p-3 p-md-4 p-xl-5">
  <div class="container">
    <div class="card border-light-subtle shadow-sm">
      <div class="row g-0">
        <div class="col-12 col-md-6">
          <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" src="https://images.unsplash.com/photo-1610465299996-30f240ac2b1c?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTl8fG9wZW4lMjBsYXB0b3B8ZW58MHx8MHx8fDA%3D">
        </div>
        <div class="col-12 col-md-6">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <div class="row">
              <div class="col-12">
                <div class="mb-5">
                  <h3>Signup</h3>
                </div>
              </div>
            </div>


            <form action="/user_signup" method="post">
              <div class="row gy-3 gy-md-4 overflow-hidden">
                <div class="col-12">
                  <label for="email" class="form-label">Username <span class="text-danger">*</span></label>
                  <br>{{#if err.username.path}} <span class="text-danger">{{err.username.msg}}</span>{{/if}}
                  <input type="text" class="form-control" name="username" id="email" placeholder="name@example.com" required>
                </div>
                <div class="col-12">
                  <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                     <br>{{#if err.email.path}} <span class="text-danger">{{err.email.msg}}</span>{{/if}}
                  <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                </div>
                <div class="col-12">
                  <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                     <br>{{#if err.password.path}} <span class="text-danger">{{err.password.msg}}</span>{{/if}}
                  <input type="password" class="form-control" name="password" id="password" value="" required>
                </div>
                <div class="col-12">
                  <label for="password" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                     <br>{{#if err.confirmpassword.path}} <span class="text-danger">{{err.confirmpassword.msg}}</span>{{/if}}
                  <input type="password" class="form-control" name="confirmpassword" id="password" value="" required>
                </div>
                <div class="col-12">
                  <label for="password" class="form-label">Phone Number <span class="text-danger">*</span></label>
                     <br>{{#if err.phonenumber.path}} <span class="text-danger">{{err.phonenumber.msg}}</span>{{/if}}
                  <input type="number" class="form-control" name="phonenumber" id="password" value="" required>
                </div>
                
                <div class="col-12">
                  <div class="d-grid">
                    <button class="btn bsb-btn-xl btn-primary" type="submit">Signup</button>
                  </div>
                </div>
              </div>
            </form>
            <div class="row">
              <div class="col-12">
                <hr class="mt-5 mb-4 border-secondary-subtle">
                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                  <a href="/user_login" class="link-secondary text-decoration-none">Already have an account</a>&nbsp;&nbsp;
                  <a href="#!" class="link-secondary text-decoration-none">Forgot password</a>
                </div>
              </div>
            </div>
          
          </div>
        </div>
      </div>
    </div>
  </div>
</section>