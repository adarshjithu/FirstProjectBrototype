    let cls =setInterval(function(){ 
        document.querySelector(".counter").innerHTML = counter;
        counter--;
        if(counter===0){
          clearInterval(cls)
       document.getElementById("resend").innerHTML= 'Resend OTP'
      
          
        }
      
    },1000)

  }
    count()
</script>