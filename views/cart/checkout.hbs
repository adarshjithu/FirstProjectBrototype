    <div class="container">
      <div class="py-5 text-center">
        
        <h2>CHECKOUT</h2>
        

      <div class="row">
         {{!-- cartDetails --}}
        <div class="col-md-4 order-md-2 mb-4">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-secondary badge-pill">3</span>
          </h4>
          <ul class="list-group mb-3">
            {{#each cart}}
            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <img style="width: 40px; height: 40px;" src="/assets/products/{{this.product.image}}" alt="">
              <div>
                <h6 class="my-0">{{this.product.name}}</h6>
                <small class="text-muted">{{this.count}} X {{this.product.price}}</small>
              </div>
              <span class="text-muted">{{this.total}}</span>
            </li>
            {{/each}}

          
            <li class="list-group-item d-flex justify-content-between">
              <span>Total Discount</span>
              <span id="discount">123</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span >Sub Total</span>
              <span id="subtotal">123</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Total Price</span>
              <span id="total"></span>
            </li>
          </ul>



          <form class="card p-2">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Promo code" name="promocode">
              <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Redeem</button>
              </div>
            </div>
          </form>
        </div>
           
          {{!-- cartdetails --}}

        <div class="col-md-8 order-md-1" style="border: 1px solid rgb(203, 193, 193);border-radius: 10px; background-color:#DEE2E5; ">
          <h4 class="mb-3">Billing address</h4>



          {{!-- checkout form --}}
          <form class="needs-validation" novalidate method="post" action="/cart/checkout">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="firstName">First name</label> 
                  {{!-- firstname --}}
                <input type="text" class="form-control" id="firstName" placeholder="" value="" required name="firstname">
                 {{!-- firstname --}}
                <div class="invalid-feedback">
