<script>


  
  async function changeQuantity(proId,count){


       var qty = parseInt(  document.getElementById(proId).innerHTML)
      
       console.log(qty,count)
       if(qty<2&&count==-1){

             document.getElementById(`btn${proId}`).classList.add("changeColor")
       }
       else{
         document.getElementById(`btn${proId}`).classList.remove("changeColor")

      await fetch(`http://localhost:3000/cart/changeQuantity?proId=${proId}&&count=${count}`).then(function(data){
        fetch('http://localhost:3000/cart/cartcount').then((res)=>{
            return res.json()
         }).then((data)=>{
            document.getElementById("items").innerHTML = data.count ;
            document.getElementById("subtotal").innerHTML = data.subTotal
            document.getElementById("discount").innerHTML = data.discount
            document.getElementById("totalprice").innerHTML = data.totalPrice

            
         })
        return data.json()

      }).then((result)=>{
     const quantity=parseInt(document.getElementById(proId).innerHTML);
      document.getElementById(proId).innerHTML=quantity+count
      console.log(result.total)
      document.getElementById(`total${proId}`).innerHTML = result.total;
      
               
      })
       }
}





